---
import { rawMDtoSortedArray, type EventT } from "@/helpers";
import FrontPage from "@/layouts/FrontPage.astro";
import type { MarkdownInstance } from "astro";

const events = rawMDtoSortedArray(await Astro.glob<MarkdownInstance<EventT>>("./*{.md,.mdx}"));
---

<FrontPage title="LuxLudi" logo="luxludi" events={events}>
  <center>
    <h1>En Construction</h1>
  </center>
</FrontPage>

<style is:inline>
  :root {
    --main-color: 174, 126, 209;
    --secondary-color: 255, 230, 60;
  }
</style>

