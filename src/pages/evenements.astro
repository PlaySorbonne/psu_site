---
import { type MDnXInstance, type EventT, rawMDtoSortedArray } from "@/helpers";
import FrontPage from "@/layouts/FrontPage.astro";

const carrousel = await Astro.glob<MDnXInstance<EventT>>("./**/*{.md,.mdx}");

// importing the carrousel images for PSU
const psuCar = await Astro.glob<MDnXInstance<EventT>>("./*{.md,.mdx}");

const events = rawMDtoSortedArray([...psuCar, ...carrousel]);
---

<FrontPage title="Nos événements" events={events} />
