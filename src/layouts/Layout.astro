---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- <meta name="description" content="Play Sorbonne UniversitÃ©, le site !" /> -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&family=Titillium+Web:wght@200;400;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --pink: 232, 101, 173;
    --black-text: 61, 61, 111;
    --black-title: 0, 32, 51;
  }
  html {
    background-color: #f6f6f6;
    font-family: "Titillium Web", sans-serif;
    scroll-behavior: smooth;
  }
  * {
    box-sizing: border-box;
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  p {
    padding: 5px 0;
    text-align: justify;
  }
</style>
