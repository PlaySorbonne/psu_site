---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string; // title de la page
  prefetchs?: string[]; // liste des liens à prefetch
  // description?: string; // TODO description de la page
}

const { title, prefetchs } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <link rel="sitemap" href="/sitemap-index.xml" />


    <meta charset="UTF-8" />
    <!-- <meta name="description" content="Play Sorbonne Université, le site !" /> -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;700&family=Titillium+Web:wght@200;400;700;900&display=swap"
      rel="stylesheet"
    />
    {prefetchs?.map((prefetch) => <link rel="prefetch" href={prefetch} />)}
    <script async defer data-website-id="b18bc4a7-99f7-42c5-82ef-9b93aebb6cf5" src="https://stats.backend.playsorbonne.fr/umami.js"></script>
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --black-text: 61, 61, 111;
        --black-title: 0, 32, 51;
        --white-title: 255, 255, 255;
      }
      html {
        background-color: #f6f6f6;
        font-family: "Titillium Web", sans-serif;
        scroll-behavior: smooth;
      }
      body {
        color: rgb(var(--black-text));
        font-size: 1.1rem;
      }
      * {
        box-sizing: border-box;
        margin: 0;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      p {
        padding: 5px 0;
        text-align: justify;
      }
    </style>
  </body>
</html>
