---
interface Props {
  img: string;
  alt?: string;
}

const { img, alt } = Astro.props;
---

<div class="wrapper">
  <img src={img} alt={alt ?? "logo"} class="img" />
  <slot />
</div>

<style>
  .wrapper {
    max-width: 200px;
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #e865ad;
    padding: 20px;
    color:white;
    font-weight: bold;
    text-justify: auto;
    margin: 0 20px;
  }
  .img {
    width: 100%;
  }

  @media (max-width: 768px) {
    .wrapper {
      flex-direction: row;
      width: 100%;
      margin: 20px 0;
      padding: 10px 5px;
    }
    .img {
      width: 30%;
    }

  }

</style>