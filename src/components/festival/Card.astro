---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

export interface CardInfo {
  title: string;
  description: string;
  image: ImageMetadata;
}

type Props = CardInfo;

let { image, title, description } = Astro.props;
---

<div class="card">
  <Image src={image} alt={title} class="img" width={250}/>
  <div class="info">
    <h2>{title}</h2>
    <p>{description}</p>
  </div>
</div>


<style>
  .img {
    object-fit: cover;
    /* to background */
    position: absolute;
    z-index: -1;
  }
  .card {
    overflow: hidden;
    width: 250px;
    height: 200px;
  }
  
  .card .info {
    display: none;
  }
  
  .card:hover .info {
    display: block;
  }
</style>