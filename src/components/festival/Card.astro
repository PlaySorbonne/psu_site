---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

export interface CardInfo {
  titre: string;
  description: string;
  image: ImageMetadata;
  link?: string;
}

type Props = CardInfo;

let { image, titre, description } = Astro.props;
---

<div class="card">
  <Image loading="eager" src={image} alt={titre} class="img" width={300}/>
  <div class="info">
    <h2 class="title">{titre}</h2>
    <p class="description">{description}</p>
  </div>
</div>

<style>
  .img {
    position: absolute;
    z-index: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease-in-out;
  }
  .card {
    position: relative;
    overflow: hidden;
    width: 400px;
    height: 200px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: all 0.5s ease-in-out;
  }

  @media screen and (max-width: 768px) {
    .card {
      width: 300px;
      height: 200px;
    }
  }

  .info {
    position: absolute;
    z-index: 1;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0) 100%
    );
    padding: 20px;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    color: white;
    transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    transition: all 0.5s ease-in-out;
  }

  .description {
    font-size: 1rem;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transition: all 0.5s ease-in-out;
  }

  .card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .card:hover .img {
    transform: scale(1.1);
  }

  .card:hover .info {
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.8) 100%
    );
  }

  .card:hover .title {
    opacity: 0;
    max-height: 0;
    margin-bottom: 0;
  }

  .card:hover .description {
    opacity: 1;
    max-height: 200px;
  }
</style>