---
interface Props {
  link: string;
  text?: string;
  paddingTop?: string;
  paddingBottom?: string;
  color?: string;
  track?: string
}

const { link, text, paddingBottom, paddingTop, color, track } = Astro.props;
---

<div class="wrapper" style={{ paddingTop, paddingBottom }}>
  <a href={link} target="_blank" class="link" data-umami-event={track || "button-clicked"}>
    <div class="contentwrapper">
      {text}
      <slot />
    </div>
  </a>
</div>

<style>
  .wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .link {
    width: fit-content;
  }

  .contentwrapper:hover {
    transform: scale(1.1);
    transition: all 0.5s ease-in-out;
  }

  .contentwrapper {
    width: fit-content;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    background-color: rgb(var(--main-color));
    color: rgb(var(--white-title));
    font-size: x-large;
    font-weight: 700;
    border-radius: 5px;

    transform: scale(1);
    transition: all 0.5s ease-in-out;
  }
</style>